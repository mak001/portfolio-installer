{
    "name": "silverstripe/installer",
    "type": "silverstripe-recipe",
    "description": "The SilverStripe Framework Installer",
    "require": {
        "php": "^7.1 || ^8",
        "silverstripe/recipe-plugin": "^1.2",
        "silverstripe/recipe-cms": "4.8.0@stable",
        "silverstripe/login-forms": "4.4.1@stable",
        "isaacdanielreyna/retrowave-theme": "dev-master",
        "dnadesign/silverstripe-elemental": "^4.6",
        "dynamic/silverstripe-elemental-embedded-code": "^2.0",
        "dynamic/silverstripe-elemental-flexslider": "^2.0",
        "dynamic/silverstripe-elemental-gallery": "^2.0",
        "dynamic/silverstripe-elemental-image": "^2.0",
        "dynamic/silverstripe-elemental-markdown": "^1.0",
        "dnadesign/silverstripe-elemental-userforms": "^3.0",
        "axllent/silverstripe-bootstrap-forms": "^2.0",
        "wilr/silverstripe-googlesitemaps": "^2.2"
    },
    "require-dev": {
        "sminnee/phpunit": "^5.7",
        "sminnee/phpunit-mock-objects": "^3.4.5",
        "webbuilders-group/silverstripe-recipe-github-ci": "^1.0"
    },
    "extra": {
        "resources-dir": "_resources",
        "project-files-installed": [
            ".github/workflows/ci.yml",
            "app/.htaccess",
            "app/_config.php",
            "app/_config/mimevalidator.yml",
            "app/_config/mysite.yml",
            "app/src/Page.php",
            "app/src/PageController.php",
            "app/tests/PHPUnit/.gitignore",
            "app/tests/behat/features/.gitignore",
            "behat.yml",
            "phpcs.xml.dist",
            "phpunit.xml.dist"
        ],
        "public-files-installed": [
            ".htaccess",
            "index.php",
            "web.config"
        ],
        "expose": [
            "themes/portfolio/images"
        ]
    },
    "autoload": {
        "psr-4": {
            "Mak001\\Portfolio\\": "app/src/",
            "Mak001\\Portfolio\\Test\\": "app/tests/"
        }
    },
    "config": {
        "process-timeout": 600
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
